<Page
    x:Class="BangumiX.View.SearchCollection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BangumiX.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <local:CollectionList x:Name="CollectionListControl"/>
        <Border BorderBrush="Black" BorderThickness="1 0 1 1" Width="320" Height="48" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Padding="5" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="GhostWhite"/>
                    </Style>
                </StackPanel.Resources>
                <TextBox x:Name="KeywordTextBox" Width="270"/>
                <Button Background="Transparent" Click="SearchButtonClick">
                    <Button.Content>
                        <SymbolIcon Symbol="Find"/>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
