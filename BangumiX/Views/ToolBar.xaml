    <ListView x:Name="ToolBarListView" Background="#7F1F1F1F">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <DockPanel LastChildFill="False"/>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource ToolBarButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Height" Value="64"/>
                <Setter Property="Width" Value="64"/>
                <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}"/>
            </Style>
        </ListView.Resources>
        <ListViewItem>
            <ListViewItem>
                <Button x:Name="SwitchToDailyBtn" Click="SwitchToDailyClick">
                    <Border BorderThickness="4 0 0 0" Width="64" BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}}">
                        <TextBlock TextAlignment="Center" Foreground="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListViewItem}}" Text="每日"/>
                    </Border>
                </Button>
            </ListViewItem>
        </ListViewItem>
        <ListViewItem>
            <Button x:Name="SwitchToWatchingBtn" Click="SwitchToWatchingClick">
