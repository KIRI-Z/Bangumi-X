<UserControl x:Class="BangumiX.Views.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BangumiX.Views"
             x:Name="_this"
             mc:Ignorable="d" 
             Background="#01000000"
             Width="64"
             d:DesignHeight="900" d:DesignWidth="64">

    <UserControl.Resources>
        <Storyboard x:Key="ToolBarDetails">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="_this" Storyboard.TargetProperty="Width"
                             BeginTime="00:00:00" Duration="00:00:0.31">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="64"/>
                <EasingDoubleKeyFrame KeyTime="00:00:0.3" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="00:00:0.31" Value="1200"/>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimation Storyboard.TargetName="BlurBackground" Storyboard.TargetProperty="Background.Color"
                            From="#00000000" To="#CC000000" BeginTime="00:00:00" Duration="00:00:0.1"/>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="RestoreTrigger" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="RestoreTrigger2" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"/>
            </BooleanAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="OptionDetailBtn" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ToolBarRestore">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="_this" Storyboard.TargetProperty="Width"
                             BeginTime="00:00:00" Duration="00:00:0.3">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1200"/>
                <EasingDoubleKeyFrame KeyTime="00:00:0.01" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="00:00:0.3" Value="64"/>
            </DoubleAnimationUsingKeyFrames>
            <ColorAnimation Storyboard.TargetName="BlurBackground" Storyboard.TargetProperty="Background.Color"
                            From="#CC000000" To="#00000000" BeginTime="00:00:00" Duration="00:00:0.3"/>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="RestoreTrigger" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="RestoreTrigger2" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
            </BooleanAnimationUsingKeyFrames>
            <BooleanAnimationUsingKeyFrames Storyboard.TargetName="OptionDetailBtn" Storyboard.TargetProperty="IsHitTestVisible"
                            BeginTime="00:00:00" Duration="00:00:00">
                <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="True"/>
            </BooleanAnimationUsingKeyFrames>
        </Storyboard>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <BitmapImage x:Key="DonationIcon" UriSource="../Resources/Donation.png"/>
        <Style TargetType="ListView" BasedOn="{StaticResource BaseListView}">
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource BaseListViewItem}">
                        <Style.Resources>
                            <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#7F3F3F3F"/>
                            <SolidColorBrush x:Key="Item.MouseOver.Border" Color="Silver"/>
                            <SolidColorBrush x:Key="Item.SelectedInactive.Background" Color="#7F3F3F3F"/>
                            <SolidColorBrush x:Key="Item.SelectedInactive.Border" Color="Silver"/>
                            <SolidColorBrush x:Key="Item.SelectedActive.Background" Color="#7F3F3F3F"/>
                            <SolidColorBrush x:Key="Item.SelectedActive.Border" Color="Silver"/>
                            <Style x:Key="FocusVisual">
                                <Setter Property="Control.Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Style.Resources>
                        <Setter Property="DockPanel.Dock" Value="Top"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Silver"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Foreground" Value="GhostWhite"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Foreground" Value="GhostWhite"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Foreground" Value="GhostWhite"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Button BorderThickness="0" x:Name="RestoreTrigger" Background="#00000000" Width="1200" IsHitTestVisible="False" Panel.ZIndex="2">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click" >
                    <BeginStoryboard Storyboard="{StaticResource ToolBarRestore}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="RestoreTrigger2" Background="Transparent" IsHitTestVisible="False" Width="65" Height="65" Panel.ZIndex="99">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click" >
                    <BeginStoryboard Storyboard="{StaticResource ToolBarRestore}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Canvas HorizontalAlignment="Left" x:Name="BlurBackground" Background="#00000000" Width="200" Panel.ZIndex="1"/>
        <ListView x:Name="ToolBarListView" Width="200" HorizontalAlignment="Left" Panel.ZIndex="3">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel LastChildFill="False"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Height" Value="64"/>
                    <Setter Property="Width" Value="164"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ButtonBase}">
                                <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
