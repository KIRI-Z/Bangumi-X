<UserControl x:Class="BangumiX.Views.MyCollection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BangumiX.Views"
             xmlns:common="clr-namespace:BangumiX.Common"
             mc:Ignorable="d" 
             Background="#01000000"
             d:DesignHeight="900" d:DesignWidth="1136">

    <Border BorderThickness="1 0 0 0" BorderBrush="Black">
        <Grid x:Name="GridMain">
            <local:SubjectList x:Name="SubjectListControl"/>
            <Border Height="56" Width="344" BorderBrush="Black" BorderThickness="0 0 0 1" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ListView x:Name="NavigationListView" Style="{StaticResource NavigationListView}">
                    <ListView.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource NavigationButton}"/>
                    </ListView.Resources>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <DockPanel HorizontalAlignment="Center" LastChildFill="False"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListViewItem IsSelected="True">
                        <Button x:Name="WishButton" Click="WishButtonClick">
                            <Border>
                                <TextBlock Text="想看"/>
                            </Border>
                        </Button>
                    </ListViewItem>
                    <ListViewItem>
                        <Button Click="WatchingButtonClick">
                            <Border>
                                <TextBlock Text="在看"/>
                            </Border>
                        </Button>
                    </ListViewItem>
                    <ListViewItem>
                        <Button Click="WatchedButtonClick">
                            <Border>
                                <TextBlock Text="看过"/>
                            </Border>
                        </Button>
                    </ListViewItem>
                    <ListViewItem>
                        <Button Click="HoldButtonClick">
                            <Border>
                                <TextBlock Text="搁置"/>
                            </Border>
                        </Button>
                    </ListViewItem>
                    <ListViewItem>
                        <Button Click="DropButtonClick">
                            <Border>
                                <TextBlock Text="抛弃"/>
                            </Border>
                        </Button>
                    </ListViewItem>
                    <!--<ListViewItem DockPanel.Dock="Right">
                            <Button>
                                <Border>
                                    <TextBlock Text="刷新"/>
                                </Border>
                            </Button>
                        </ListViewItem>-->
                </ListView>
            </Border>
        </Grid>
    </Border>
</UserControl>
