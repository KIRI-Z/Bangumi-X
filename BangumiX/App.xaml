<Application
    x:Class="BangumiX.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BangumiX"
    RequestedTheme="Dark">

    <Application.Resources>
        <AcrylicBrush x:Key="MainPageBackground"
                      BackgroundSource="HostBackdrop"
                      TintColor="Black"
                      TintOpacity="0.5"
                      FallbackColor="Black"/>
        <AcrylicBrush x:Key="PaneBackgroundAcrylicBrush"
                      BackgroundSource="HostBackdrop"
                      TintColor="Black"
                      TintOpacity="0.7"
                      FallbackColor="Black"/>
    </Application.Resources>

</Application>
