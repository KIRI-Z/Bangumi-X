<Window x:Class="bangumi_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bangumi_win"
        mc:Ignorable="d"
        Title="BGM-Win" Height="800" Width="1000"
        MinHeight="800" MinWidth="1000"
        FontFamily="SimHei"
        Foreground="GhostWhite">

    <Grid Name="gridWrapper" Background="Transparent">
        <Grid Name="gridMain" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>

</Window>
